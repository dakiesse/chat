doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    base(href='/')
    title Chat
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    link(href='//cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/4.0.2/bootstrap-material-design.css')
    link(href='/styles.css')
  body
    app-root
      #initial-container
        h1 Ng2 Chat
        img(src='http://samherbert.net/svg-loaders/svg-loaders/ball-triangle.svg', height='64', width=64)

    if token
      script
        | var token = '#{token}'
    script(src="http://localhost:4200/inline.bundle.js")
    script(src="http://localhost:4200/polyfills.bundle.js")
    script(src="http://localhost:4200/styles.bundle.js")
    script(src="http://localhost:4200/vendor.bundle.js")
    script(src="http://localhost:4200/main.bundle.js")
